@model HomeWork_2_Library.Models.BooksModel
@{
    ViewData["Title"] = "Add a Book";
    ViewData["Description"] = "Add Book";
    Layout = "~/views/shared/_Layout.cshtml";
}
@section sidebar
{
    <div class="sidebarContent">
        <h2>Navigation:</h2>
         <ul class="nav navbar-nav">
            <li class="btn btn-primary"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="btn btn-primary"><a asp-area="" asp-controller="Home" asp-action="MyLibrary">My Library</a></li>
        </ul>
    </div>
}
@section Header
{
    <div class="panel-header text-center"><h4>Add a New Book!</h4></div>    
}


   <div class="panel panel-success">
    <div class="panel-heading text-center">
        <div class="panel-body">
            <h4 class="">Add a New Book:</h4>
            <form class="p-a-1" asp-action="AddBook" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Title">Book Title:</label>
                    <input asp-for="Title" />
                </div>
                <div class="form-group">
                    <label asp-for="AuthorName">Author Name:</label>
                    <input asp-for="AuthorName" />
                </div>
                <div class="form-group">
                    <label asp-for="ISBN">ISBN:</label>
                    <input asp-for="ISBN" />
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit New Book
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
